@import "variables.styl";

.description
  background-color: $light-gray
  text-align: center
  padding-bottom: 50px

.description__curve
  background-image: url("../images/bg-curve-mobile.svg")
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  width: 100%
  height: 200px
  position: relative
  top: -15px
  left: 0
  z-index: 1

.description__image
  margin: auto
  position: relative
  top: -130px
  z-index: 2
  display: flex
  justify-content: center

.description__image img
  width: 350px

.description h2
  font-family: "Raleway", sans-serif;
  margin: 0
  font-size: 1.1em
  font-weight: 700
  color: $dark-blue

.description p
  padding: 0 20px
  text-align: left
  color: $desaturated-blue
  font-size: 0.9em

.description__cta
  display: flex
  align-items: center
  justify-content: center
  margin-bottom: 50px

.description a
  font-family: "Raleway", sans-serif;
  color: $cyan
  text-decoration: none
  font-weight: 700
  border-bottom: 2px solid $cyan
  display: flex
  align-items: center

.quote
  background-color: white
  margin: 0 30px
  padding: 20px
  border-radius: 5px
  box-shadow:
    0.9px 1px 2.2px rgba(0, 0, 0, 0.02),
    2.2px 2.4px 5.3px rgba(0, 0, 0, 0.028),
    4.1px 4.5px 10px rgba(0, 0, 0, 0.035),
    7.4px 8px 17.9px rgba(0, 0, 0, 0.042),
    13.8px 15px 33.4px rgba(0, 0, 0, 0.05),
    33px 36px 80px rgba(0, 0, 0, 0.07)

.quote > img
  display: flex

.quote blockquote
  margin: 10px 0 20px 0
  text-align: left
  font-size: 0.77em
  color: $dark-blue
  line-height: 15px

.quote__avatar
  display: flex
  align-items: center

.quote__avatar img
  border-radius: 50%
  aspect-ratio: 1 / 1
  width: 30px
  object-fit: cover
  margin-right: 10px

.quote__avatar div
  display: flex
  flex-direction: column
  text-align: left
  color: $dark-blue

.quote__avatar span
  font-family: "Raleway", sans-serif;
  font-weight: 700
  font-size: 0.8em

.quote__avatar small
  font-size: 0.5em

@media (min-width: 1024px)
  .description__curve
    background-image: url("../images/bg-curve-desktop.svg")
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    width: 100%
    height: 200px
    position: relative
    top: -80px
    left: 0
    z-index: 1

  .description__content
    padding: 0 20px
    height: 100%
    display: flex
    flex-direction: row-reverse
    align-items: center
    justify-content: space-evenly

  .description__image
    margin: 0
    position: static
    display: block
  
  .description__image img
    width: 100%;
    max-width: 600px;
    height: auto;

  .description__text
    text-align: left
  
  .description h2
    font-family: "Raleway", sans-serif;
    font-size 2.3em
    line-height: 1.5em
    max-width: 600px
  
  .description p
    max-width: 520px
    padding: 0
    font-size: 1em
    color: $dark-blue
  
  .description__cta
    display: flex
    justify-content: start
    margin-bottom: 50px

  .quote
    background-color: white
    margin: 0
    padding: 20px
    max-width: 270px

  .quote blockquote
    font-size: 0.8em
    color: $dark-blue
    line-height: 18px
    font-weight: 400
   