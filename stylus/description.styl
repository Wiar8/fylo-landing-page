@import "variables.styl";

.description
  background-color: $light-gray
  text-align: center
  padding-bottom: 50px

.description__curve
  background-image: url("../images/bg-curve-mobile.svg")
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  width: 100%
  height: 200px
  position: relative
  top: -15px
  left: 0
  z-index: 1

.description__image
  margin: auto
  position: relative
  top: -130px
  z-index: 2
  display: flex
  justify-content: center

.description__image img
  width: 350px

.description h2
  font-family: "Raleway", sans-serif;
  margin: 0
  font-size: 1.1em
  font-weight: 700
  color: $dark-blue

.description p
  padding: 0 20px
  text-align: left
  color: $desaturated-blue
  font-size: 0.9em

.description__cta
  display: flex
  align-items: center
  justify-content: center
  margin-bottom: 50px

.description a
  font-family: "Raleway", sans-serif;
  color: $cyan
  text-decoration: none
  font-weight: 700
  border-bottom: 2px solid $cyan
  display: flex
  align-items: center

.quote
  background-color: white
  margin: 0 30px
  padding: 20px
  border-radius: 5px

.quote > img
  display: flex

.quote blockquote
  margin: 10px 0 20px 0
  text-align: left
  font-size: 0.77em
  color: $dark-blue
  line-height: 15px

.quote__avatar
  display: flex
  align-items: center

.quote__avatar img
  border-radius: 50%
  aspect-ratio: 1 / 1
  width: 30px
  object-fit: cover
  margin-right: 10px

.quote__avatar div
  display: flex
  flex-direction: column
  text-align: left
  color: $dark-blue

.quote__avatar span
  font-family: "Raleway", sans-serif;
  font-weight: 700
  font-size: 0.8em

.quote__avatar small
  font-size: 0.5em